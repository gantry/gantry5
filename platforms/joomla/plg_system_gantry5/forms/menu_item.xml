<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params">
        <fieldset name="gantry" label="Gantry Menu">
            <field
                name="gantry"
                type="hidden"
                value="1"
            />

            <field
                name="gantry-attributes"
                type="subform"
                label="PLG_SYSTEM_GANTRY5_FIELD_LIST_TAG_ATTRIBUTES_LABEL"
                layout="joomla.form.field.subform.repeatable-table"
                icon="list"
                multiple="true"
            >
                <form hidden="true" name="list_templates_modal" repeat="true">
                    <field
                        name="key"
                        type="text"
                        label="PLG_SYSTEM_GANTRY5_FIELD_KEY_LABEL"
                    />

                    <field
                        name="value"
                        type="text"
                        label="PLG_SYSTEM_GANTRY5_FIELD_VALUE_LABEL"
                    />
                </form>
            </field>

            <field
                name="gantry-link_attributes"
                type="subform"
                label="PLG_SYSTEM_GANTRY5_FIELD_LINK_TAG_ATTRIBUTES_LABEL"
                layout="joomla.form.field.subform.repeatable-table"
                icon="list"
                multiple="true"
            >
                <form hidden="true" name="list_templates_modal" repeat="true">
                    <field
                        name="key"
                        type="text"
                        label="PLG_SYSTEM_GANTRY5_FIELD_KEY_LABEL"
                    />

                    <field
                        name="value"
                        type="text"
                        label="PLG_SYSTEM_GANTRY5_FIELD_VALUE_LABEL"
                    />
                </form>
            </field>

            <field
                name="gantry-hash"
                type="text"
                label="PLG_SYSTEM_GANTRY5_FIELD_APPEND_HASH_LABEL"
            />

            <field
                name="gantry-dropdown"
                type="list"
                label="PLG_SYSTEM_GANTRY5_FIELD_DROPDOWN_STYLE_LABEL"
            >
                <option value="">- Use Default -</option>
                <option value="standard">Simple</option>
                <option value="fullwidth">Extended</option>
            </field>

            <field
                name="gantry-dropdown_dir"
                type="list"
                label="PLG_SYSTEM_GANTRY5_FIELD_DROPDOWN_DIRECTION_LABEL"
            >
                <option value="left">Expand Left</option>
                <option value="center">Keep Centered</option>
                <option value="right">Expand Right</option>
            </field>

            <field
                name="gantry-dropdown_hide"
                type="radio"
                label="PLG_SYSTEM_GANTRY5_FIELD_DISABLE_DROPDOWNS_LABEL"
                layout="joomla.form.field.radio.switcher"
                default="0"
                filter="boolean"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="gantry-width"
                type="text"
                label="PLG_SYSTEM_GANTRY5_FIELD_DROPDOWN_WIDTH_LABEL"
            />

            <field
                name="gantry-class"
                type="text"
                label="PLG_SYSTEM_GANTRY5_FIELD_CSS_CLASS_LABEL"
            />

            <field
                name="gantry-subtitle"
                type="text"
                label="PLG_SYSTEM_GANTRY5_FIELD_SUBTITLE_LABEL"
            />

            <field
                name="gantry-layout"
                type="hidden"
            />

            <field
                ame="gantry-visible"
                type="hidden"
                filter="bool"
            />

            <field
                name="gantry-columns"
                type="hidden"
                filter="raw"
            />

            <field
                name="gantry-columns_count"
                type="hidden"
                filter="raw"
            />

            <field
                name="gantry-particle"
                type="hidden"
            />

            <field
                name="gantry-options"
                type="hidden"
                filter="raw"
            />
        </fieldset>
    </fields>
</form>
