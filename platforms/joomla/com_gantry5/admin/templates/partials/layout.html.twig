{% extends "@gantry-admin/partials/page.html.twig" %}

{% block stylesheets %}
    {{ gantry.document.useAsset('style', 'com_gantry5.g-admin') }}
    {{ parent() }}
{% endblock %}

{% block javascript %}
    {{ gantry.document.useAsset('script','com_gantry5.main') }}
    {% include "@gantry-admin/partials/js-translations.html.twig" %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div id="g5-container">
    <div class="inner-container">
        {% block gantry_content_wrapper %}
            <div data-g5-content-wrapper="">
                <div class="g-grid">
                    <div class="g-block main-block">
                        <div id="g-main">
                            <div class="g-content" data-g5-content="">
                                {% block gantry %}
                                    {{ content|raw }}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
</div>
{% endblock %}

{% block footer_section %}
{% endblock %}
