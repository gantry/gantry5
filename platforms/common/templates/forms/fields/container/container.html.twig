{% extends "forms/field.html.twig" %}

{% block input %}
    {% if field.fields %}
        {% for childName, child in field.fields %}
            {% if childName starts with '.' %}
                {% set childValue = value[childName[1:]] %}
                {% set childName = name ~ childName %}
            {% else %}
                {% set childValue = data.get(scope ~ childName) %}
            {% endif %}

            {% if child.type %}
                {% include ["forms/fields/#{child.type}/#{child.type}.html.twig", 'forms/fields/unknown/unknown.html.twig']
                with {name: childName, field: child, value: childValue} %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}
