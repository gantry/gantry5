{% extends "partials/base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/nucleus.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/admin.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css/font-awesome.min.css') }}" type="text/css" />
    {{ parent() }}
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ url('gantry-admin://assets/js/main.js') }}"></script>
    {{ parent() }}
{% endblock %}

{% block content %}
<div id="g5-container" class="container">
    <div class="grid pure-g">
        <div class="block sidebar-block size-1-7 pure-u-1-7">
            <nav id="gantry" class="block sidebar-block">
                {% include "gantry/partials/navigation.html.twig" %}
            </nav>
        </div>
        <div class="block pure-u-6-7">
            <div data-mode-indicator="production"></div>
            <section id="main">
                <div id="main-header">
                    {% include "gantry/partials/header.html.twig" %}
                </div>
                <div class="content">
                    {% block gantry %}
                    {% endblock %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}

{% block footer_section %}
    <footer id="footer">
        <a href="http://gantry-framework.org">Gantry Administration</a> by <a href="http://www.rockettheme.com">RocketTheme</a>.
    </footer>
{% endblock %}
