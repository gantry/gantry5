{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
<form method="post" action="{{ gantry.route(action) }}">
    <ul class="g-tabs">
        <li class="active"><a href="#">Particle</a></li>
        <li><a href="#">Block</a></li>
    </ul>

    <div class="g-panes">
        <div class="g-pane active">
            <div class="card settings-block">
                <h4>
                    <span data-particle-title="{{ particle.name }}">{{ particle.name }} <i class="fa fa-pencil font-small"></i> <span class="badge font-small">{{ particle.subtype }}</span></span>
                    {% if particle.form.fields.enabled %}
                    {% include 'forms/fields/enable/enable.html.twig' with {'name': 'particle.enabled', 'field': particle.form.fields.enabled, 'value': data.enabled, 'default': 1} %}
                    {% endif %}
                </h4>

                <div class="inner-params">
                    {% include 'forms/fields.html.twig' with {'blueprints': particle.form, 'data': {'particle': data}, 'prefix': 'particle.'} %}
                </div>
            </div>
        </div>

        <div class="g-pane">
            <div class="card settings-block">
                <h4>
                    Block
                </h4>
                <div class="inner-params">
                    {% include 'forms/fields.html.twig' with {'blueprints': extra.form, 'data': {'block': block}, 'prefix': 'block.'} %}
                </div>
            </div>
        </div>
    </div>

    <div class="g-modal-actions">
        <a class="button float-left">Defaults</a>
        <button class="button button-primary" type="submit">Apply</button>
        <a class="button g5-dialog-close">Cancel</a>
    </div>
</form>
{% endblock %}
