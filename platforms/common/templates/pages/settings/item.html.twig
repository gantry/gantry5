{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
<form method="POST">
    <div class="pull-right">
        <button class="button">Save</button>
        <button class="button" name="METHOD" value="DELETE">Reset</button>
        <a class="button" data-g5-ajaxify="" data-g5-ajaxify-target="[data-g5-content]" href="{{ gantry.route(parent) }}">Back</a>
    </div>
    <div id="settings" class="cards-wrapper">
        <div class="card settings-block">
            <h4>
                {{ particle.name }}
                {% if particle.form.fields.enabled %}
                {% include 'forms/fields/enable/enable.html.twig' with {'default': true, 'scope': 'particle.', 'field': particle.form.fields.enabled, 'value': data.enabled} %}
                {% endif %}
            </h4>
            <div class="inner-params">
                {% include 'forms/fields.html.twig' with {'blueprints': particle.form} %}
            </div>
        </div>
    </div>
</form>
{% endblock %}
