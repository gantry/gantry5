{% extends "@gantry-admin/partials/page.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/nucleus.css')|e }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/css-compiled/admin.css')|e }}" type="text/css" />
    <link rel="stylesheet" href="{{ url('gantry-admin://assets/fonts/awesome/font-awesome.min.css')|e }}" type="text/css" />
    {{ parent() }}
{% endblock %}

{% block javascript %}
    <script type="text/javascript" async="async" crossorigin="anonymous" src="{{ url('gantry-admin://assets/js/main.js')|e }}"></script>
    {{ parent() }}
{% endblock %}

{% block content %}
<div id="g5-container">
    <div class="g-grid">
        <div class="g-block">
            <div id="main-header" data-mode-indicator="production">
                {% include "@gantry-admin/partials/header.html.twig" %}
            </div>
        </div>
    </div>
    <div class="inner-container">
        <div class="g-grid">
            <div class="g-block">
                <div class="update-header clearfix">
                    <!--FIX ME--><span class="update-text">Updates Available: Awesome Theme v1.0, Gantry Framework v5.0.1</span>
                    <a href="#" class="button button-update"><i class="fa fa-refresh"></i> <span>Update</span></a>
                </div>
            </div>
        </div>
        <div class="g-grid">
            <div class="g-block inner-header">
                <div class="sidebar-toggle">
                    <span data-sidebar-toggle><i class="fa fa-bars"></i></span>
                    <span class="gantry-logo"></span>
                </div>
                <div class="settings-state">
                    <!--FIX ME--><span class="master-toggle">Default Settings <i class="fa fa-chevron-down"></i></span>
                </div>
            </div>
        </div>
        <div class="g-grid">
            <div class="g-block sidebar-block size-1-7">
                <nav id="gantry">
                    {% include "@gantry-admin/partials/navigation.html.twig" %}
                </nav>
            </div>
            <div class="g-block main-block">
                <section id="g-main">
                    <div class="g-content" data-g5-content>
                        {% block gantry %}
                        {% endblock %}
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer_section %}
    <footer id="footer">
        <a href="http://gantry-framework.org">Gantry Administration</a> by <a href="http://www.rockettheme.com">RocketTheme</a>.
    </footer>
{% endblock %}
