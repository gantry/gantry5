<?xml version="1.0"?>
<config>
    <modules>
        <gantry_adminblock>
            <version>1.0.0</version>
        </gantry_adminblock>
    </modules>
    <global>
        <blocks>
            <gantry_adminblock>
                <class>Gantry_Adminblock_Block</class>
            </gantry_adminblock>
        </blocks>
        <helpers>
            <adminblock>
                <class>Gantry_Adminblock_Helper</class>
            </adminblock>
        </helpers>
    </global>
    <admin>
        <routers>
            <gantry_adminblock>
                <use>admin</use>
                <args>
                    <module>Gantry_Adminblock</module>
                    <frontName>adminblock</frontName>
                </args>
            </gantry_adminblock>
        </routers>
    </admin>
</config>
