        "pimple/pimple": "~3.0",
        "filp/whoops": "~1.2",
        "rockettheme/toolbox": "dev-develop",
        "leafo/scssphp": "0.3.0",
        "leafo/lessphp": "~0.5",
        "erusev/parsedown-extra": "~0.7"
    },
    "repositories": [
