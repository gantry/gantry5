{% set attr_class = segment.classes ? ' class="g-' ~ segment.classes|join(' ') ~ '"' %}
{% set attr_id = segment.title|lower|replace({' ': '-'}) %}
{% set tag_type = (attr_id == 'header' or attr_id == 'footer') ? attr_id : 'section' %}

{% set html %}
	{% if segment.children %}
		{% for segment in segments %}
  			{% include '@nucleus/' ~ segment.type ~ '.html.twig' with { 'segments':segment.children } %}
  		{% endfor %}
  	{% endif %}
{% endset %}

{% if html|trim %}
	<{{ tag_type }} id="g-{{ attr_id }}" {{ attr_class }}>
  		{{ html }}
 	</{{ tag_type }}>
{% endif %}