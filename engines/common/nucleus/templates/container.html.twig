{% set html %}
    {% for segment in segments %}
        {% include '@nucleus/' ~ segment.type ~ '.html.twig' with { 'segments':segment.children } %}
    {% endfor %}
{% endset %}

{% if html|trim %}
    {% set attr_id = segment.attributes.id ? ' id="' ~ segment.attributes.id|e ~ '"' %}
    {% set classes = segment.attributes.class ? ' ' ~ segment.attributes.class|e ~ '"' %}

    <div{{ attr_id }} class="g-container{{ classes }}">
        {{ html }}
    </div>
{% endif %}
