{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
<a href="{{ url(particle.url)|default(gantry.siteUrl()) }}" title="{{ particle.text }}" rel="home" class="{{ particle.class }}">
    {% set image = url(particle.image) %}
    {% if image %}
    <img src="{{ image ) }}" alt="{{ particle.text }}" />
    {% else %}
    {{ particle.text }}
    {% endif %}
</a>
{% endblock %}
